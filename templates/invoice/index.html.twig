{% block title %}Facture{% endblock %}
{% block body %}
    <h1>Facture</h1>
    <a class="btn btn-success" href="{{ path('invoice_new') }}">Nouvelle facture</a><br><br>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Tableau de mes factures:</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive-sm">
                <table class="table table-bordered table-hover table-striped table-dark" id="invoice-table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Id</th>
                            <th>Référence</th>
                            <th>Client</th>
                            <th>Date</th>
                            <th>Référence de virement</th>
                            <th>Montant Total</th>
                            <th>Montant TTC</th>
                            <th>Montant Total TVA</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for invoice in invoices %}
                            <tr>
                                <td>{{ invoice.id }}</td>
                                <td>{{ invoice.reference }}</td>
                                <td>{{ invoice.customer }}</td>
                                <td>{{ invoice.createdDate ? invoice.createdDate|date('d-m-Y H:i:s') : '' }}</td>
                                <td>{{ invoice.bankTransferReference }}</td>
                                <td>{{ invoice.amountTotal }} €</td>
                                <td>{{ invoice.amountTotalIncluded }} €</td>
                                <td>{{ invoice.amountTotalVAT }} €</td>
                                <td>
                                    <a class="btn btn-outline-info row mr-1" href="{{ path('invoice_show', {'id': invoice.id}) }}">Voir</a>
                                    <a class="btn btn-outline-warning row" href="{{ path('invoice_edit', {'id': invoice.id}) }}">Modifier</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="12">Aucune facture trouvé</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
{% endblock %}

